# SecureGuard AI - Environment Variables
# Copy this file to .env and fill in your values

# AWS Credentials (for development only - use IAM roles in production)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1

# AWS Resources (will be populated after deployment)
API_GATEWAY_URL=
COGNITO_USER_POOL_ID=
COGNITO_APP_CLIENT_ID=
DYNAMODB_TABLE_THREATS=ThreatEvents
DYNAMODB_TABLE_USERS=Users

# Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0

# SageMaker
SAGEMAKER_ENDPOINT_NAME=threat-classifier

# Security
ENCRYPTION_KEY=  # Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
